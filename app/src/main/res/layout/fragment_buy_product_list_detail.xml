<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="application.pinerria.Fragments.BuyProductListDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="10dp"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    app:ci_drawable="@drawable/strock4"
                    android:layout_below="@+id/viewpager"/>

                <TextView
                    android:id="@+id/contactDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_below="@+id/viewpager"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:text="Show Interest"
                    android:gravity="center"
                    android:background="@drawable/stroke_pink"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#fff"/>


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posting ID : "
                    android:textColor="@color/pink"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/postId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textColor="@color/gray2"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading"
                android:textColor="@color/blue"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:id="@+id/linerlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manufect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="210"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/gray2"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/gray2"></View>
                <TextView
                    android:id="@+id/milage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="210"
                    android:visibility="gone"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray2"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray2"></View>
                <TextView
                    android:id="@+id/fuelType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="210"
                    android:visibility="gone"

                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/gray2"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray2"></View>
                <TextView
                    android:id="@+id/mDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="210"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/gray2"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/homeBusinessLay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:weightSum="4"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age of the Product "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/ageOfProd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 Months"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="210"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="#111"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ownLiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Status:"/>

                    <TextView
                        android:id="@+id/statusProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"/>
                    <CheckBox
                        android:id="@+id/sold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"
                        android:text="sold"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lastWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"
                        android:text="helo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listed in Search"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/visitors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="helo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:text="Total Visitors"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"
                        android:text="helo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:text="User Interested"/>

                </LinearLayout>


            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ededed">

                <TextView
                    android:id="@+id/descreption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Part or"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Details "
                        android:gravity="center"
                        android:textColor="@color/pink"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/emailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="210"
                        android:layout_gravity="left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="210"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Post Displayed Until"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/expire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="210"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray2"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
