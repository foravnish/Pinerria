<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/home"
    tools:context=".Fragments.SelectCatagory">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Any One Category \n to Post Your Ad"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">


            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="top"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="5dp">-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></View>
            <LinearLayout
                android:id="@+id/linerCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cc2a76da"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sell Property \nor Car"
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:paddingBottom="50dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/questionCar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/qqq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/car"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>
            <!--</android.support.v7.widget.CardView>-->




            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="top"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="5dp">-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></View>
            <LinearLayout
                android:id="@+id/linerOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cce24871"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sell Other Than\nProperty or Car"
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:layout_margin="20dp"
                        android:paddingBottom="50dp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/questionOther"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ques_pink"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/property"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>


            </LinearLayout>

            <!--<com.google.android.gms.ads.AdView-->
                <!--android:id="@+id/search_ad_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:visibility="visible"-->
                <!--ads:adSize="BANNER"-->
                <!--ads:adUnitId="ca-app-pub-3987173620445938/6395752420">-->

            <!--</com.google.android.gms.ads.AdView>-->
            <!--</android.support.v7.widget.CardView>-->



        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
